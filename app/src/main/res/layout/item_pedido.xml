<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/pedidoIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pedido ID:" />

    <TextView
        android:id="@+id/pedidoStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado:" />

    <TextView
        android:id="@+id/pedidoTotalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total:" />

    <TextView
        android:id="@+id/pedidoNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del producto" />

    <TextView
        android:id="@+id/pedidoDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DescripciÃ³n del producto" />

    <ImageView
        android:id="@+id/pedidoImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop" />
</LinearLayout>
